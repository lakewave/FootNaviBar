<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.v4.view.ViewPager
        android:id="@+id/vp"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/tabbg"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_find"
            style="@style/TabTextViewStyle"
            android:drawableTop="@drawable/tab_find"
            android:text="@string/tab_find" />

        <TextView
            android:id="@+id/tv_chat"
            style="@style/TabTextViewStyle"
            android:drawableTop="@drawable/tab_chat"
            android:text="@string/tab_chat" />

        <TextView
            android:id="@+id/tv_friends"
            style="@style/TabTextViewStyle"
            android:drawableTop="@drawable/tab_friends"
            android:text="@string/tab_friends" />

        <TextView
            android:id="@+id/tv_me"
            style="@style/TabTextViewStyle"
            android:drawableTop="@drawable/tab_me"
            android:text="@string/tab_me" />


    </LinearLayout>

</LinearLayout>
